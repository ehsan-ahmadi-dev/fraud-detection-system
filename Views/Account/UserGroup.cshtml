@model IList<UserInGroup>
@{
    ViewData["Title"] = "UserGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Style {
    <!-- Datatables -->
    <link href="~/lib/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">
}

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@ViewData["section-titile-1"]</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class=" input-group-addon"><i class="fa fa-user"></i></span>
                                        <input type="text" name="userName" class="form-control" placeholder="نام کاربری" required />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-group"></i></span>
                                        <select class="form-control" name="groupId" asp-items="@((SelectList)ViewData["GroupOptions"])" required>
                                            <option value="">یک گروه کاری انتخاب کنید</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-success">افزودن</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@ViewData["section-titile-2"]</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>نام  کاربری</th>
                                <th>گروه کاری</th>
                                <th>اقدام</th>
                            </tr>
                        </thead>


                        <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>

                                    <form method="post" id="@(user.UserName)_Group">
                                        <div class="form-group " style="width:100%">
                                            <div class="input-group" style="width:100%">
                                                <input type="hidden" name="userName" value="@user.UserName">
                                                <span class="input-group-addon" style="width:5%"><i class="fa fa-group"></i></span>
                                                <select class="form-control" name="groupId" asp-items="@((SelectList)ViewData["GroupOptions"])" style="width:50%">
                                                    <option value="@user.WorkGroupId" selected>@user.WorkGroupName</option>
                                                </select>
                                            </div>
                                        </div>
                                    </form>
                                </td>
                                <td>
                                    <button type="submit" class="btn btn-primary" form="@(user.UserName)_Group" asp-action="UpdateUser"><i class="fa fa-edit"></i></button>
                                    <button type="submit" class="btn btn-danger" form="@(user.UserName)_Group" asp-action="DeleteUser"><i class="fa fa-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


            </div>
        </div>
    </div>
</div>



@section Scripts {
    <!-- Datatables -->
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/lib/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/lib/datatables.net-buttons-bs/js/buttons.bootstrap.min.js"></script>
    <script src="~/lib/datatables.net-buttons/js/buttons.flash.min.js"></script>
    <script src="~/lib/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="~/lib/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="~/lib/datatables.net-fixedheader/js/dataTables.fixedHeader.min.js"></script>
    <script src="~/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables.net-responsive-bs/js/responsive.bootstrap.js"></script>
    <script src="~/lib/datatables.net-scroller/js/dataTables.scroller.min.js"></script>

}

